<UserControl
    x:Class="Re_TTSCat.Windows.IconTextBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Re_TTSCat.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <FontFamily x:Key="FontAwesome">/Re_TTSCat;component/Resources/#Font Awesome 5 Free Solid</FontFamily>
        <Style x:Name="FontIconSpacing" TargetType="{x:Type TextBlock}">
            <Setter Property="Margin" Value="2,0,2,0" />
        </Style>
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal">
        <TextBlock
            x:Name="tbIconGlyph"
            VerticalAlignment="Center"
            FontFamily="{StaticResource FontAwesome}" />
        <TextBlock x:Name="tbText" VerticalAlignment="Center" />
    </StackPanel>
</UserControl>
